{{> layout/header}}

<div class="container p-5">

    <table class="table table-striped">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성자</th>
            <th></th>
        </tr>
        </thead>
        {{#boardList}}
            <tbody>
            <tr>
                <td>{{no}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{author}}</td>
                <td>
                    <div class="d-flex">
                        <form action="/board/{{no}}/delete" method="post">
                            <button class="btn btn-danger">삭제</button>
                        </form>
                        <form action="/board/{{no}}/updateForm" method="get">
                            <button class="btn btn-warning">수정</button>
                        </form>
                    </div>
                </td>
            </tr>
            </tbody>
        {{/boardList}}
    </table>

</div>

{{> layout/footer}}